<h2>Contact Info.</h2>

<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for emails.." title="Type in a name">

<ul id="myUL">
  <li><a href="#">email1,male,86589585</a></li>
  <li><a href="#">email2,female,4989656</a></li>
  <li><a href="#">email3,male,86464164</a></li>
  <li><a href="#">email4,male,863568646</a></li>
  <li><a href="#">email5,female,464646984</a></li>

</ul>

<script>
function myFunction() {
    var input, filter, ul, li, a, i, txtValue;
    input = document.getElementById("myInput");
    filter = input.value.toUpperCase();
    ul = document.getElementById("myUL");
    li = ul.getElementsByTagName("li");
    for (i = 0; i < li.length; i++) {
        a = li[i].getElementsByTagName("a")[0];
        txtValue = a.textContent || a.innerText;
        if (txtValue.toUpperCase().indexOf(filter) > -1) {
            li[i].style.display = "";
        } else {
            li[i].style.display = "none";
        }
    }
}
</script>
